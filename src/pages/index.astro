    </main>
	<script>
		document.addEventListener('DOMContentLoaded', () => {

		// --- 1. Temporizador de Cuenta Regresiva ---
		
		// Establece la fecha del evento (15 de octubre de 2026 a las 4:00 PM)
		const eventDate = new Date('Octuber 15, 2026 16:00:00').getTime();
		const countdownElement = document.getElementById('countdown');

		const countdownInterval = setInterval(() => {
			const now = new Date().getTime();
			const distance = eventDate - now;
			
			// Si el evento ya pas√≥
			if (distance < 0) {
				clearInterval(countdownInterval);
				if (countdownElement) {
					countdownElement.innerHTML = "¬°El evento ha comenzado!";
					countdownElement.classList.remove('animate-pulse'); // Quita la animaci√≥n de pulso
				}
				return;
			}

			// C√°lculos de tiempo
			const days = Math.floor(distance / (1000 * 60 * 60 * 24));
			const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
			const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
			const seconds = Math.floor((distance % (1000 * 60)) / 1000);
			
			// Muestra el resultado
			if (countdownElement) {
				countdownElement.innerHTML = `Faltan: ${days}d ${hours}h ${minutes}m ${seconds}s`;
			}
		}, 1000);

		
		// --- 2. Animaci√≥n de Fade-in al hacer Scroll ---
		
		const sections = document.querySelectorAll('.fade-in-section');
		
		const observerOptions = {
			root: null, // usa el viewport
			rootMargin: '0px',
			threshold: 0.1 // 10% del elemento debe ser visible
		};

		const observer = new IntersectionObserver((entries, observer) => {
			entries.forEach(entry => {
				if (entry.isIntersecting) {
					entry.target.classList.add('is-visible');
					observer.unobserve(entry.target); // Deja de observar una vez que se ha animado
				}
			});
		}, observerOptions);

		sections.forEach(section => {
			observer.observe(section);
		});

		// (El c√≥digo de smooth scroll no es necesario,
		// ya que a√±adimos 'class="scroll-smooth"' al <html> en Tailwind)

	});
	</script>
